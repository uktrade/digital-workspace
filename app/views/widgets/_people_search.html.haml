.people-search-inner-page
  .homepage-top-inner
    %form{action: "#{ENV['PEOPLEFINDER_URL']}/search", method: 'get', role: 'search', id: 'people_search', class: 'search-people-form' }
      .govuk-search
        %label.search-label
          Search people, teams and skills
        .search-wrapper
          %input#search_filters_{:name => "search_filters[]", :type => "hidden", :value => "people"}/
          %input#search_filters_{:name => "search_filters[]", :type => "hidden", :value => "teams"}/
          %input{name: 'query', id: 'people-search-input', type: 'search', title: 'Search', class: 'search-element search-input js-class-toggle js-search-focus'}
          .search-element.search-submit-wrapper
            %button{type: 'submit', class: 'search-submit', id:'people_search_submit' }
              Search
    .user-account
      %a{:href => @people_finder_profile.profile_url}
        - if @people_finder_profile.present?
          = "Hi, #{@people_finder_profile.given_name}"
          %span.update-account
            - if @people_finder_profile.completion_score < 100
              = "Set up your profile (#{@people_finder_profile.completion_score}% complete)"
            - else
              Edit your profile
          - if @people_finder_profile.profile_image_url
            .maginot
              %a{:href => @people_finder_profile.profile_url}
                = image_tag @people_finder_profile.profile_image_url, class: 'user-account-profile-img', alt: @people_finder_profile.name
        - else
          Please set up your profile
          %span.update-account
            Set up your profile now

= render partial: "widgets/notification_bar"
