#feedback_container
  %a{:href => '#feedback', :id => 'feedbackToggle'}
    Is there anything wrong with this page?
  = form_tag('/report_problem', method: :post, class: 'new_problem_report', id: 'new_problem_report')
  .form-group
    = label('problem_report_goal', 'LABEL')
    = text_field_tag('problem_report_goal', 'What were you trying to do?', {:class => 'form-control', :id => 'problem_report_goal'})
  .form-group
    = label('problem_report_problem', 'LABEL')
    = text_field_tag('problem_report_problem', 'What was the problem?', {:class => 'form-control', :id => 'problem_report_problem'})
  = hidden_field_tag('problem_report_origin', "#{request.original_url}")
  = hidden_field_tag('problem_report_browser', "#{request.env['HTTP_USER_AGENT']}")
  = submit_tag('Report', class: 'button')
