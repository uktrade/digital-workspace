%div{:id => 'standard', :class => 'page-content'}
  = render partial: "widgets/people_search_inner_page"
  = render partial: "widgets/zendesk_header"
  %main#content.root-index.standard-section
    .grid-row
      .column-full
        %ul.breadcrumb
          %li
            = link_to( 'Home', "/" )

    .grid-row
      .column-full
        %hr{:class => 'rule-small rule-top'}
    .grid-row
      .column-two-thirds
        = @test
        - if @content.present?
          - @content.each do |p|
            / = p
            %h2.heading-large
              = p["title"]["rendered"]
            = p["acf"]["excerpt"]
    .grid-row
      .column-full
        %hr{:class => 'rule-small'}
    .grid-row
      - if @content_theme.present?
        - @content_theme.each do |theme|
          - theme_slug = theme['slug']
          - standard_topics = StandardQueries.standard_topic_query(theme_slug)
          - if standard_topics.present?
            - standard_topics.each do |topic|
              .column-third.card
                %h3
                  = link_to( topic["title"]["rendered"], link_topics_top + topic["slug"])
                = topic["content"]["rendered"].html_safe


= render partial: "widgets/zendesk_footer"
