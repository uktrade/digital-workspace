- content_for :global_header_text do
  %img{:src => 'http://dit-prototype.preview3.co.uk/assets/dit-logo.png', :alt => 'Department for International Trade'}

- content_for :page_title, "Digital Workspace"

- content_for :head do

  = stylesheet_link_tag "application", media: "all"
  = csrf_meta_tag

- content_for :header_class do
  = "with-proposition"

- content_for :proposition_header do
  .header-proposition
    .content
      = link_to "Digital Workspace", root_path, id: "proposition-name"

      %a{:href => "#proposition-links", :class => "js-header-toggle menu"}
        Menu
      %nav{:id => "proposition-menu"}
        %ul{:id => "proposition-links"}
          %li
            = link_to "Peoplefinder", "http://peoplefinder-dev.herokuapp.com"
          %li
            = link_to "News", "/news/"
          %li
            = link_to "Link Three", "http://peoplefinder-dev.herokuapp.com"
          %li
            = link_to "Link Four", "http://peoplefinder-dev.herokuapp.com"
          %li
            = link_to "Link Five", "http://peoplefinder-dev.herokuapp.com"
    .search
      %form{:action => "/search", :method => "get", :role => "search"}
        .proposition-search.govuk-search
          %label.search-label
            Search site
          .search-wrapper
            %input{:type => 'search', :title => 'Search', :class => 'search-element search-input js-class-toggle'}
            .search-element.search-submit-wrapper
              %button{:type => 'submit', :class => 'search-submit'}
                Search


- content_for :body_end do
  = javascript_include_tag 'application'

- content_for :content do
  .beta-bar
    %strong.beta-label
      BETA
    %span
      This is a new service - your
      = link_to("feedback", "#")
      will help us to improve it.
  %wrapper.direction-ltr
    = yield

- content_for :footer_top do
  - @footer_menu_1_content = footer_menu_1_content
  .grid-row
    .column-quarter
      %h2.heading-medium
        Networks
      %hr{:class => 'rule-footer'}
      %ul
        -if !@footer_menu_1_content.nil?
          - @footer_menu_1_content.each do |menu_link|
            %li
              = link_to(menu_link['menu_item']['title'], menu_link['menu_item']['url'], target: menu_link['menu_item']['target'])
    .column-quarter
      %h2.heading-medium
        Publications
      %hr{:class => 'rule-footer'}
      %ul
        -if !@footer_menu_2_content.nil?
          - @footer_menu_2_content.each do |menu_link|
            %li
              = link_to(menu_link['menu_item']['title'], menu_link['menu_item']['url'], target: menu_link['menu_item']['target'])
    .column-quarter
      %h2.heading-medium
        Sectors
      %hr{:class => 'rule-footer'}
      %ul
        -if !@footer_menu_3_content.nil?
          - @footer_menu_3_content.each do |menu_link|
            %li
              = link_to(menu_link['menu_item']['title'], menu_link['menu_item']['url'], target: menu_link['menu_item']['target'])
    .column-quarter
      %h2.heading-medium
        Regions
      %hr{:class => 'rule-footer'}
        -if !@footer_menu_4_content.nil?
          - @footer_menu_4_content.each do |menu_link|
            %li
              = link_to(menu_link['menu_item']['title'], menu_link['menu_item']['url'], target: menu_link['menu_item']['target'])
  %hr{:class => 'rule-footer'}

- content_for :footer_support_links do
  %ul
    %li
      = link_to("Help", "")
    %li
      = link_to("Contact", "")

= render file: 'layouts/govuk_template'
