%div{:id => 'topics', :class => 'page-content'}
  = render partial: "widgets/people_search_inner_page"
  %main#content.root-index.content-section
    .grid-row
      .column-half
        %ul.breadcrumb
          %li
            = link_to( 'Home', "/" )
      .column-half
        / .form-group.select-category
        /   %label{:class => 'form-label', :for => 'select-topic'} Topics
        /   %select{:class => 'form-control', :id => 'select_jump_to', :name => 'select-topic'}
        /     %option{:value => ""}
        /       \ Select Topic
        /     - if @topic_selector.present?
        /       - @topic_selector.each do |c|
        /         %option{:value => "/topic/" + c["slug"]}
        /           = link_to( c["title"]["rendered"] )
    .grid-row
      .column-full
        - if @topic_theme.present?
          - @topic_theme.each do |t|
            %h2.heading-large
              = t["title"]["rendered"]
            = t["content"]["rendered"].html_safe

      .column-two-thirds
        %hr{:class => 'rule-small rule-top'}
        .topic-container
          .topic
            - if @topic.present?
              - @topic.each_with_index do |t, i|
                / %pre
                /   = t["theme_taxonomy"]
                /   = t["type"]
                %h2.heading-medium
                  = t["title"]["rendered"]
                - if @topic_child.present?
                  %ul.topics-list
                    - @topic_child[0..4].each_with_index do |t, i|
                      %li
                        = link_to(t["title"]["rendered"], '/topic/' + t["slug"])
                    .topics-list-extra
                    / - if @topic_child.present?
                    /   - @topic_child[5..-1].each_with_index do |t, i|
                    /     %li
                    /       = link_to(t["title"]["rendered"], '/topic/' + t["slug"])
                    / %li.topic-controls
                    /   %span{class: 'topic-toggle'}
                    /     View more

                %hr{:class => 'rule-small'}
      .column-third
        %hr{class: 'rule-small rule-top'}
        -#%h2.heading-medium
        -#  Related news
